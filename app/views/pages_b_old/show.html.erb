<%- model_class = Page -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:meta_keywords) %>:</strong></dt>
  <dd><%= @page.meta_keywords %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meta_description) %>:</strong></dt>
  <dd><%= @page.meta_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @page.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @page.body %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slug) %>:</strong></dt>
  <dd><%= @page.slug %></dd>
  <dt><strong><%= model_class.human_attribute_name(:template_name) %>:</strong></dt>
  <dd><%= @page.template_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_published) %>:</strong></dt>
  <dd><%= @page.is_published %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approved) %>:</strong></dt>
  <dd><%= @page.approved %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publish_date) %>:</strong></dt>
  <dd><%= @page.publish_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by_id) %>:</strong></dt>
  <dd><%= @page.created_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:changed_by_id) %>:</strong></dt>
  <dd><%= @page.changed_by_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approved_by_id) %>:</strong></dt>
  <dd><%= @page.approved_by_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_page_path(@page), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              page_path(@page),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
