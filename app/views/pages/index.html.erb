<p id="notice"><%= notice %></p>

<h1>Странички</h1>

<h2>Структура</h2>

<%= render partial: 'pages/pages_list', locals: { pages: @root_pages }  %>

<% if current_user.has_role? :admin %>
    <div>некатегоризированное</div>
    <table>
    <% @uncategorized_pages.each do |page| %>
        <tr>
          <td><%= page.title %></td>
          <td><%= page.slug %></td>
          <td><%= page.template_name %></td>
          <td><%= page.is_published %></td>

          <td><%= link_to 'Show', page_preview_path(page), class: 'btn' %></td>
          <td><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-blue' %></td>
          <td><%= link_to 'Destroy', page, method: :delete, class: 'btn btn-red', data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </table>
<% end %>
<div class="add-article">
  <%= link_to 'Добавить публикацию', new_page_path, class: 'btn' %>
</div>

